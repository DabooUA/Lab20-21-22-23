<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.gc.dto.UserDto" table="Users" schema="Coffeeshopdb">

		<!-- id - is the primary key that is referencing in the table  -->
		<id name="firstName">
			<column name="FirstName" sql-type="varchar(20)"></column>
		</id>
		
		<property name="lastName">
			<column name="LastName" sql-type="varchar(20)"></column>
		</property>

		<property name="email">
			<column name="Email" sql-type="varchar(50)" length="50"></column>
		</property>

		<property name="phoneNum">
			<column name="PhoneNumber" sql-type="int" length="10"></column>
		</property>

		<property name="userPassword">
			<column name="UserPassword" sql-type="varchar(50)" length="50"></column>
		</property>

	</class>
</hibernate-mapping>	
